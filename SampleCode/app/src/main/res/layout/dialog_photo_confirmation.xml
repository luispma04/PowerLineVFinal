<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_card_bg"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Confirmar Fotografia"
        android:textColor="#1E3A8A"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/popup_image_preview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/text_photo_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Estrutura: S1 | Posição: P1"
        android:textColor="#4B5563" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_popup_retake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_stop"
            android:text="Refazer Foto"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_popup_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_confirm"
            android:text="Aceitar Foto"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>