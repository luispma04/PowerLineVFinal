<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inspection_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F7FA">

    <!-- Título da aplicação com estilo mais moderno -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Inspeção Automatizada de Estruturas"
        android:textSize="22sp"
        android:textColor="#1E3A8A"
        android:textStyle="bold" />

    <!-- Seção de status de conexão - Novo elemento -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_card_bg"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status do Drone"
                android:textStyle="bold"
                android:textColor="#1E3A8A"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/text_connection_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desconectado"
                android:layout_marginStart="8dp"
                android:textColor="#DC2626"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_product_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modelo: N/A"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/text_battery_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bateria: N/A"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_drone_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Localização: N/A"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Seção de Importação de Dados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_card_bg"
        android:orientation="vertical"
        android:padding="12dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Arquivos de Missão"
            android:textColor="#1E3A8A"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_load_structures"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:textColor="#FFFFFF"
                android:text="Importar Estruturas" />

            <Button
                android:id="@+id/btn_load_photo_positions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:textColor="#FFFFFF"
                android:text="Importar Posições" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_csv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nenhum arquivo carregado"
            android:textColor="#4B5563" />
    </LinearLayout>

    <!-- Visualização da Foto com design melhorado -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Visualização da Foto"
        android:textColor="#1E3A8A"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/photo_preview_bg"
        android:padding="2dp"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/text_no_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Aguardando foto do drone..."
            android:textSize="16sp"
            android:textColor="#4B5563" />
    </FrameLayout>

    <!-- Controles de revisão de fotografia com design aprimorado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Controle de Fotos"
            android:textColor="#1E3A8A"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_confirm_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/button_bg_confirm"
                android:textColor="#FFFFFF"
                android:text="Confirmar Foto (OK)" />

            <Button
                android:id="@+id/btn_adjust_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/button_bg_adjust"
                android:textColor="#FFFFFF"
                android:text="Ajustar Posição" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_take_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:enabled="false"
                android:background="@drawable/button_bg_photo"
                android:textColor="#FFFFFF"
                android:text="Tirar Foto Manual" />

            <!-- Botão para simular foto (visível apenas no modo simulador) -->
            <Button
                android:id="@+id/btn_simulate_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:enabled="false"
                android:background="@drawable/button_bg_photo"
                android:textColor="#FFFFFF"
                android:text="Simular Foto"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- Controles de missão com design futurista -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Controles de Missão"
        android:textColor="#1E3A8A"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_start_mission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:enabled="false"
            android:background="@drawable/button_bg_start"
            android:textColor="#FFFFFF"
            android:text="Iniciar Missão" />

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:enabled="false"
            android:background="@drawable/button_bg_pause"
            android:textColor="#FFFFFF"
            android:text="Pausar" />

        <Button
            android:id="@+id/btn_stop_mission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:enabled="false"
            android:background="@drawable/button_bg_stop"
            android:textColor="#FFFFFF"
            android:text="Encerrar" />
    </LinearLayout>

    <!-- Status atual (design aprimorado) -->
    <TextView
        android:id="@+id/text_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/status_bg"
        android:minHeight="36dp"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:text="Status: Pronto para iniciar missão"
        android:elevation="3dp" />
</LinearLayout>